extends layout

block content
	h1= title

	.menu
		.right_field
			a(href="/password") Change Password
			span.sub  | 
			a(href="/home") Home

	.container
		.center_field
			.span7.well
				.area
					form(method="POST" action="/profile")
						.control-group
							label.control-label(for='firstname') First Name
							.controls
								input#firstname(type='text', name='firstname', placeholder='First Name', value=user.firstname)

						.control-group
							label.control-label(for='lastname') Last Name
							.controls
								input#lastname(type='text', name='lastname', placeholder='Last Name', value=user.lastname)

						br
						.control-group
							.controls
								button.btn.btn-success(type='submit') Save Profile