extends layout

block content
	h1= title

	#wrap.left_col
		h2 Register

		.field
			.left_field
				form(method="POST" action="/signup")
					p Name:
						.right_field
							input#name(type="text", name="name")

					br
					p Username:
						.right_field
							input#username(type="text", name="username")

					br
					p Email:
						.right_field
							input#email(type="email", name="email")

					br
					p Password:
						.right_field
							input#password(type="password", name="password")

					br
					.right_field
						p: button(type="submit") Create

	#wrap.right_col
		h2 Login

		.field
			.left_field
				form(method="POST" action="/home")
					p Name:
						.right_field
							input#name(type="text", name="name")

					br
					p Password:
						.right_field
							input#pword(type="password", name="pword")

					br
					.left_field
						p: button(type="submit") Login